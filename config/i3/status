general {
  color_good = "#00FF00"
}

order += "battery 0"
order += "disk /"
order += "wireless wlan0"
order += "load"
order += "time"


disk "/" {
  format = "/ %free"
}

wireless wlan0 {
  format_up = "w %quality %essid %bitrate %ip"
  format_down = "w down"
}

battery 0 {
  format = "b %percentage[%remaining]"
  path = "/sys/class/power_supply/BAT0/uevent"
  last_full_capacity = true
}
